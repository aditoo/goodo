<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="179dp"
    android:background="@drawable/beach_cover"
    android:id="@+id/content_img">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:background="@color/greytransperent"
        android:id="@+id/lower_linear_layout"
        android:weightSum="8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:text="עזרו לי לעזור ל... "
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/content_txt"/>

        <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/num_vol_img"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#fff"
            android:id="@+id/num_vol_txt"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#fff"
            android:id="@+id/dur_txt"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/location_logo"
            android:id="@+id/loc_img"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#fff"
            android:id="@+id/loc_txt"/>
    </LinearLayout>

</LinearLayout>